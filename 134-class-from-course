public Id classFromCourse(String courseName) {
    // code here
    apxio__Course__c thisCourse = [SELECT Id, Name FROM apxio__Course__c WHERE Name =:courseName LIMIT 1];
    if ( thisCourse != null ) {
        apxio__Class__c newClass = new apxio__Class__c(
            apxio__Course__c = thisCourse.Id,
            Name = courseName
        );
        insert newClass;
        return newClass.Id;
    } else {

        return null;

    }
}