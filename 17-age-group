public String ageGroup(Integer n) {
    //code here

    if(isBetween(n, 0, 1)) {

        return 'Infant';

    } else if (isBetween(n, 2, 14)) {

        return 'Child';

    } else if (isBetween(n, 15, 21)) {

        return 'Youth';

    } else {

        return 'Adult';

    }
    
}

public static Boolean isBetween(Integer test_number, Integer lower_limit, Integer upper_limit) {

    if (test_number >= lower_limit & test_number <= upper_limit) {

        return True;

    } else {

        return False;

    }

}