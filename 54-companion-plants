public Boolean companionPlants(String plant1, String plant2) {
    //code here
    Boolean isCompanion = False;
    list<list<String>> list_of_lists_of_companion_plants = new list<list<String>>{{'lettuce','cucumbers'},{'lettuce','onions'},{'onions','carrots'},{'onions','tomatoes'}};

    for ( list_of_companion_plants : list_of_lists_of_companion_plants ) {

        if ( list_of_companion_plants.contains(plant1) & list_of_companion_plants(plant2) ) {

            isCompanion = True;
            break;

        } else {

            ;

        }


    }

}