public Integer nextPrime(Integer num) {
    //code here

    Boolean isPrime;
    for (Integer i = num+1; i>num; i++) {

        isPrime = False;
        
        for (Integer j = 2; j <= Math.Ceil(i/2); j++) {

            if ( math.mod(i,j) == 0 ) {

                isPrime = False;
                break;

            } else {

                isPrime = True;

            }

        }

        if (isPrime == True) {

            return i;

        } else {}


    }

    return num;

}